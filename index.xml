      <title>Time Progress Bar</title>
      <link>https://cyliu.cc/posts/time-progress-bar/</link>
      <pubDate>Mon, 23 Jan 2023 20:51:26 +0000</pubDate>
      <guid>https://cyliu.cc/posts/time-progress-bar/</guid>
      <description>&lt;style&gt;
    table {
        width: 100%;
        border-collapse: collapse;
    }
    td {
        padding: 10px;
        border-bottom: 1px solid #eee;
    }
    .percent {
        font-family: monospace;
        letter-spacing: -1px;
    }
&lt;/style&gt;
&lt;table&gt;
    &lt;tbody&gt;
        &lt;tr&gt;&lt;td&gt;Today left: &lt;/td&gt;  &lt;td id=&#34;day&#34;&gt;&lt;/td&gt;&lt;td id=&#34;dayP&#34; class=&#34;percent&#34;&gt;&lt;/td&gt;&lt;/tr&gt;
        &lt;tr&gt;&lt;td&gt;This week left: &lt;/td&gt;  &lt;td id=&#34;week&#34;&gt;&lt;/td&gt;&lt;td id=&#34;weekP&#34; class=&#34;percent&#34;&gt;&lt;/td&gt;&lt;/tr&gt;
        &lt;tr&gt;&lt;td&gt;This month left: &lt;/td&gt;  &lt;td id=&#34;month&#34;&gt;&lt;/td&gt;&lt;td id=&#34;monthP&#34; class=&#34;percent&#34;&gt;&lt;/td&gt;&lt;/tr&gt;
        &lt;tr&gt;&lt;td&gt;This year left: &lt;/td&gt;  &lt;td id=&#34;year&#34;&gt;&lt;/td&gt;&lt;td id=&#34;yearP&#34; class=&#34;percent&#34;&gt;&lt;/td&gt;&lt;/tr&gt;
        &lt;tr&gt;&lt;td&gt;My life left: &lt;/td&gt;  &lt;td id=&#34;life&#34;&gt;&lt;/td&gt;&lt;td id=&#34;lifeP&#34; class=&#34;percent&#34;&gt;&lt;/td&gt;&lt;/tr&gt;
    &lt;/tbody&gt;
&lt;/table&gt;
&lt;script&gt;
class TimeProgressTracker {
    constructor(birthDate = new Date(1999, 9, 17), lifeSpan = 70) {
        this.birthDate = birthDate;
        this.lifeSpan = lifeSpan;
        this.elements = {
            day: { bar: document.getElementById(&#39;day&#39;), perc: document.getElementById(&#39;dayP&#39;) },
            week: { bar: document.getElementById(&#39;week&#39;), perc: document.getElementById(&#39;weekP&#39;) },
            month: { bar: document.getElementById(&#39;month&#39;), perc: document.getElementById(&#39;monthP&#39;) },
            year: { bar: document.getElementById(&#39;year&#39;), perc: document.getElementById(&#39;yearP&#39;) },
            life: { bar: document.getElementById(&#39;life&#39;), perc: document.getElementById(&#39;lifeP&#39;) }
        };

        // Optimize for high-frequency updates
        this.updateProgressIndicators = this.updateProgressIndicators.bind(this);
        this.startRealTimeUpdates();
    }

    // Progress bar generation method
    getProgressBar(percent) {
        const phases = [&#39;ğŸŒ‘&#39;, &#39;ğŸŒ˜&#39;, &#39;ğŸŒ—&#39;, &#39;ğŸŒ–&#39;, &#39;ğŸŒ•&#39;];
        
        if (percent &gt;= 1) return &#39;ğŸŒ•&#39;.repeat(10);
        
        const fullLights = Math.floor(percent * 10);
        const remainder = Math.round(((percent * 1000) % 100) / 25);
        
        const midPhase = remainder &lt; phases.length ? phases[remainder] : &#39;ğŸŒ‘&#39;;
        
        return &#39;ğŸŒ•&#39;.repeat(fullLights) + midPhase + &#39;ğŸŒ‘&#39;.repeat(9 - fullLights);
    }

    // Precision calculation methods with high-precision return
    calculateDayProgress(date) {
        const hour = date.getHours();
        const minute = date.getMinutes();
        const second = date.getSeconds();
        const millisecond = date.getMilliseconds();
        return 1 - (hour * 3600000 + minute * 60000 + second * 1000 + millisecond) / 86400000;
    }

    calculateWeekProgress(date) {
        let day = date.getDay();
        day = day === 0 ? 7 : day; // Corrected for Sunday
        const dayProgress = this.calculateDayProgress(date);
        return (7 - day + dayProgress) / 7;
    }

    calculateMonthProgress(date) {
        const year = date.getFullYear();
        const month = date.getMonth();
        const thisMonth = new Date(year, month, 1, 0, 0, 0, 0);
        const nextMonth = new Date(year, month + 1, 1, 0, 0, 0, 0);
        return (nextMonth - date) / (nextMonth - thisMonth);
    }

    calculateYearProgress(date) {
        const year = date.getFullYear();
        const startOfYear = new Date(year, 0, 1, 0, 0, 0, 0);
        const nextYear = new Date(year + 1, 0, 1, 0, 0, 0, 0);
        return (nextYear - date) / (nextYear - startOfYear);
    }

    calculateLifeProgress(date) {
        const endDate = new Date(
            this.birthDate.getFullYear() + this.lifeSpan, 
            this.birthDate.getMonth(), 
            this.birthDate.getDate(), 
            0, 0, 0, 0
        );
        return 1 - (date - this.birthDate) / (endDate - this.birthDate);
    }

    // Update all progress indicators with high precision
    updateProgressIndicators() {
        const now = new Date();
        const progressCalculations = [
            { key: &#39;day&#39;, calc: this.calculateDayProgress.bind(this) },
            { key: &#39;week&#39;, calc: this.calculateWeekProgress.bind(this) },
            { key: &#39;month&#39;, calc: this.calculateMonthProgress.bind(this) },
            { key: &#39;year&#39;, calc: this.calculateYearProgress.bind(this) },
            { key: &#39;life&#39;, calc: this.calculateLifeProgress.bind(this) }
        ];

        progressCalculations.forEach(({ key, calc }) =&gt; {
            const percent = calc(now);
            
            // Format to 4 decimal places
            const formattedPercent = (percent * 100).toFixed(4);
            
            this.elements[key].bar.textContent = this.getProgressBar(percent);
            this.elements[key].perc.textContent = `${formattedPercent}%`;
        });
    }

    // Optimize updates with requestAnimationFrame for smooth, efficient rendering
    startRealTimeUpdates() {
        const updateLoop = () =&gt; {
            this.updateProgressIndicators();
            requestAnimationFrame(updateLoop);
        };
        requestAnimationFrame(updateLoop);
    }
}

// Initialize the tracker
new TimeProgressTracker();
&lt;/script&gt;</description>
